{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Git pull",
      "type": "shell",
      "command": "git pull upstream develop",
      "runOptions": {
        "runOn": "folderOpen"
      }
    },
    {
      "label": "Install modules",
      "type": "shell",
      "command": "yarn",
      "runOptions": {
        "runOn": "folderOpen"
      },
      "dependsOn": ["Git pull"]
    },
    {
      "label": "Run Dev Client",
      "type": "shell",
      "command": "yarn start",
      "runOptions": {
        "runOn": "folderOpen"
      },
      "dependsOn": ["Git pull", "Install modules"]
    }
  ]
}
